<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Posts do Blog</title>
   <link href="/stylejs.css" rel="stylesheet">
</head>
<body>
    <% if (posts.length === 0) { %>
        <p>Nenhum post ainda!</p>
    <% } else { %>
        <% posts.forEach(function(post) { %>
            <div>
                <h4>
                    <%= post.db_marca %><br>
                    <%= post.db_modelo %><br>
                    <%= post.db_ano %><br>
                    <%= post.db_qtd %>
                </h4>

                <!-- BotÃ£o para editar esse carro -->
                <a href="/carros/editar/<%= post._id %>">Atualizar</a>
                <a href="/carros/remover/<%= post._id %>">deletar</a>
            </div>
        <% }); %>
    <% } %>

<a href="/cadastrar_carro">Gerenciar</a>

</body>
</html>

